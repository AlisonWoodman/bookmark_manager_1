<h1>Please sign up</h1>

<form action='/users' method='post'>
  <label for='email'>
    Email: <input name='email' type='text' value="<%= @user.email %>" required pattern = "[^@\s]+@[^@\s]+\.[^@\s]+">
  </label>
  <label for='password'>
    Password: <input name='password' type='password' required>
  </label>
  <label for='password'>
    Confirm Password: <input name='password_confirmation' type='password' required>
  </label>
  <input type='submit' value='Sign up'>
</form>
